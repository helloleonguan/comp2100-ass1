<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    This xml defines how each item in the mainActivity displayed in the gridView.
    -->

    <TextView
        android:id="@+id/itemHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EEEEEE"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/note_main_heading"
        android:lines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/itemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/note_main_content"
        android:lines="3"
        android:ellipsize="end"
        />

    <!--
    This TextView only convoys vital information. It does not display anything on the screen.
    -->

    <TextView
        android:id="@+id/itemID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>