<!--
A selector that designed to change the state of the chackBox when user press it.
 -->

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:variablePadding="true">
    <item android:state_checked="true"
        android:drawable="@drawable/state_checked"/>
    <item android:state_checked="false"
        android:drawable="@drawable/state_unchecked"/>
    <item android:drawable="@drawable/state_unchecked" />

</selector>